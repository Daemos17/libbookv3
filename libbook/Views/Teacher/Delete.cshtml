@{
    Layout = null;
    int teacherId = ViewBag.TeacherId; 
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Удаление преподавателя</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form id="deleteTeacherForm" action="/Teacher/DeleteTeacher" autocomplete="off">
            <div class="modal-body">
                Вы действительно хотите удалить преподавателя?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" onclick="deleteTeacher()" class="btn btn-primary" data-dismiss="modal" id="deleteBtn">Удалить</button>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    function deleteTeacher() {
        var row = $('#teacherTable').find('tr[id=@teacherId]')
        $.post("/Teacher/DeleteTeacher", {
            id: @teacherId
        }, function (response) {
            if (response) {
                row.remove();
            }
        });

    }
</script>
