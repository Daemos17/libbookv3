@{
    Layout = null;
    int studentId = ViewBag.StudentId;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Удаление студента</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form id="deleteStudentForm" action="/Student/DeleteStudent" autocomplete="off">
            <div class="modal-body">
                Вы действительно хотите удалить студента?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" onclick="deleteStudent()" class="btn btn-primary" data-dismiss="modal" id="deleteBtn">Удалить</button>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    function deleteStudent() {
        var row = $('#studentTable').find('tr[id=@studentId]')
        $.post("/Student/DeleteStudent", {
            id: @studentId
        }, function (response) {
            if (response) {
                row.remove();
            }
        });

    }
</script>
